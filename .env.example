# --- OpenAI Realtime ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-realtime

# --- Twilio Voice ---
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_NUMBER=+1XXXXXXXXXX
# Set to false to disable signature validation (for local dev)
TWILIO_VALIDATE=true

# --- Public host (NO protocol, NO trailing slash) ---
# e.g. customeroutreachagent.onrender.com
PUBLIC_HOST=your-app.onrender.com

# --- Server port (Render usually sets this automatically) ---
PORT=8080

# --- Scheduling guardrails ---
# Minimum lead time in minutes (default: 120)
SCHED_MIN_LEAD=120
# Snap to interval in minutes (default: 10)
SCHED_SNAP=10
# Base timezone (default: America/New_York)
BASE_TZ=America/New_York

# --- Microsoft Graph / Outlook (REQUIRED for demo invites) ---
# Azure AD app (client credentials) with Microsoft Graph Application permission: Calendars.ReadWrite
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
# Licensed mailbox that will OWN/SEND the invite (e.g., info@wavemarinegroup.com)
ORGANIZER_EMAIL=

# --- Booking pathway configuration (hotfix flags) ---
# Set HOTFIX_EMAIL_PRIMARY=smtp to use SMTP as primary method, graph for Graph
HOTFIX_EMAIL_PRIMARY=graph
# Set HOTFIX_EMAIL_FALLBACK=smtp to allow SMTP fallback if Graph fails, or graph for Graph fallback
HOTFIX_EMAIL_FALLBACK=smtp

# --- VAD & Turn-Taking Configuration ---
# OpenAI server VAD threshold (default: 0.58)
VAD_THRESHOLD=0.58
# Trailing silence in milliseconds before committing audio (default: 850)
TRAILING_SILENCE_MS=850
# Minimum utterance in milliseconds (default: 350)
MIN_UTTERANCE_MS=350

# --- Scheduling timezone (maps to BASE_TZ) ---
# Timezone for scheduling (default: America/New_York)
SCHED_TZ=America/New_York

# --- Optional: SMS confirmation via Twilio ---
CONFIRMATION_SMS_FROM=+1XXXXXXXXXX

# --- SMTP Configuration (for email fallback/primary) ---
# SMTP server settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
# Or use SMTP_URL for a connection string (e.g., smtp://user:pass@host:port)
SMTP_URL=
# Optional: BCC for all invites
INVITE_BCC=
# Optional: Reply-To address
REPLY_TO=
